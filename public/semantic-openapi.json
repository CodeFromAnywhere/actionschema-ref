{
  "$schema": "https://spec.actionschema.com/actionschema.json",
  "type": "object",
  "properties": {
    "$schema": { "type": "string", "format": "uri" },
    "$openapi": {
      "type": "string",
      "format": "uri",
      "description": "Referring to the OpenAPI that this is a simplification of."
    }
  },
  "patternProperties": {
    "^[a-zA-Z]+[a-zA-Z0-9]*$": {
      "type": "object",
      "properties": {
        "input": {
          "oneOf": [
            {
              "description": "An URI referring to a schema.",
              "type": "string",
              "format": "uri-reference"
            },
            {
              "$ref": "https://spec.actionschema.com/actionschema.json"
            }
          ]
        },

        "output": {
          "oneOf": [
            {
              "description": "An URI referring to a schema.",
              "type": "string",
              "format": "uri-reference"
            },
            {
              "$ref": "https://spec.actionschema.com/actionschema.json"
            }
          ]
        }
      }
    }
  }
}
