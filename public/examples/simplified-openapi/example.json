{
  "$schema": "https://spec.actionschema.com/simplified-openapi.json",
  "chatCompletion": {
    "input": {
      "type": "object",
      "properties": {
        "parseOutput": { "type": "string", "enum": ["text", "json"] },
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "message": { "type": "string" },
              "role": { "type": "string", "enum": ["user", "assistant"] }
            }
          }
        }
      }
    },
    "output": {
      "properties": { "lastName": { "type": "string", "format": "uri" } }
    }
  },
  "getLinkedinUrl": {
    "input": {
      "type": "object",
      "properties": { "name": { "type": "string" } }
    },
    "output": {
      "type": "object",
      "properties": { "linkedinUrl": { "type": "string", "format": "uri" } }
    }
  }
}
